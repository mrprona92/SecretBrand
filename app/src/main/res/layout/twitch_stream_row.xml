<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/clickableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/view_padding">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_img" />
        <ImageView
            android:id="@+id/provider"
            android:src="@drawable/twitch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/half_view_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="SLTV STAR SERIES SEASON 8 LAN Finals"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="starladder1"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/viewers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/viewers"
                    android:drawablePadding="@dimen/half_view_padding"
                    android:singleLine="true"
                    android:text="4803"
                    android:textSize="14dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/favourite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/favourite_off" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>