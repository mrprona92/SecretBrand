<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/carousel_role_holder_width"
    android:layout_height="@dimen/carousel_role_holder_height">

    <ImageView
        android:layout_width="@dimen/carousel_role_holder_width"
        android:layout_height="@dimen/carousel_role_holder_height"
        android:layout_centerInParent="true"
        android:src="@drawable/pip_border" />

    <ImageView
        android:id="@+id/role_type"
        android:layout_width="@dimen/carousel_role_size"
        android:layout_height="@dimen/carousel_role_size"
        android:layout_centerInParent="true"
        android:src="@drawable/carry" />
</RelativeLayout>