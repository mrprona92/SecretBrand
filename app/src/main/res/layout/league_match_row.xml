<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/clickableItemBackground"
    android:minHeight="40dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/radiant_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/view_padding"
        android:src="@drawable/steam_default" />

    <TextView
        android:id="@+id/radiant_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/half_view_padding"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lines="2"
        android:maxLines="2"
        android:text="Radiant"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/game_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/view_padding"
        android:layout_marginRight="@dimen/view_padding"
        android:text="VS" />

    <TextView
        android:id="@+id/dire_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/half_view_padding"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:lines="2"
        android:maxLines="2"
        android:text="Dire"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dire_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/view_padding"
        android:src="@drawable/steam_default" />
</LinearLayout>