            <corners android:radius="5dp" />
            <solid android:color="@color/cmn_gray" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />
            <solid android:color="@color/cmn_gray" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <solid android:color="@color/cmn_text_gray" />
        </shape>
    </item>
</selector>