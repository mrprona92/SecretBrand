            <corners android:radius="6dp" />
            <solid android:color="@color/cmn_red_text_view" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners android:radius="6dp" />
            <solid android:color="@color/bg_trading_status" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <solid android:color="@color/bg_trading_status" />
        </shape>
    </item>
